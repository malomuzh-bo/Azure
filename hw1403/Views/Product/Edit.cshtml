@model Product
<form class="d-flex flex-column" asp-action="Edit" asp-controller="Product" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <label class="control-label">Title</label>
    <div class="form-group">
        <input asp-for=Title type="text" class="form-control form-control-user" required><br />
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>
    <label class="control-label">Description</label>
    <div class="form-group">
        <input asp-for=Description type="text" class="form-control form-control-user" required><br />
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <label class="control-label">Category Id</label>
    <div class="form-group">
        <select asp-for="CategoryId" class="form-control" asp-items="ViewBag.categories"></select>
    </div>

    <button type="submit" class="btn btn-primary">Edit</button>
</form>
