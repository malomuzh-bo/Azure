@model Category
<h2>Edit category</h2>

<form class="d-flex flex-column" asp-action="Edit" asp-controller="Category" asp-route-id="@Model.Id.ToString()" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <label class="control-label">Category name</label>
    <div class="form-group">
        <input asp-for=CategoryName type="text" class="form-control form-control-user" required><br />
        <span asp-validation-for="CategoryName" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Edit</button>
</form>