@model List<Category>

<h2>Categories:</h2>
<table class="table-borderless">
    <tr>
        <td>Name</td>
    </tr>

    @foreach (Category item in Model)
    {
        <tr>
            <td>@item.CategoryName</td>
            <td>
                <form method="GET" asp-controller="Category" asp-action="Edit" asp-route-id="@item.Id">
                    <button type="submit" class="btn btn-outline-warning">Edit</button>
                </form>
            </td>
            <td>
                <form method="GET" asp-controller="Category" asp-action="Delete" asp-route-id="@item.Id">
                    <button type="submit" class="btn btn-outline-danger">Delete</button>
                </form>
            </td>
        </tr>
    }
</table>
<hr />
<form asp-action="Create" asp-controller="Category">
    <input type="submit" value="Create category" />
</form>