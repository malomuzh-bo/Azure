<h2>Categories:</h2>
<ul>
    @foreach (Category item in ViewBag.categories)
    {
        <li>@item.CategoryName</li>
    }
</ul>
<hr />
<form asp-action="Create" asp-controller="Category">
    <input type="submit" value="Create category" />
</form>