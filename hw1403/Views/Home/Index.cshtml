@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <form asp-action="AddCategories">
        <button type="submit">Add categories</button>
    </form>
    <form asp-action="AddProducts">
        <button type="submit">Add products</button>
    </form>
    
